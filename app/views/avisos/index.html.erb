  </tr>

<% @avisos.each do |aviso| %>
  <tr>
    <td><%= aviso.data %></td>
    <td><%= aviso.descricao %></td>
    <td><%= aviso.pessoa %></td>
    <td><%= link_to 'Show', aviso %></td>
    <td><%= link_to 'Edit', edit_aviso_path(aviso) %></td>
    <td><%= link_to 'Destroy', aviso, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

