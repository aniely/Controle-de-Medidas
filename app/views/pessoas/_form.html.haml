= semantic_form_for(@pessoa) do |f|
    =f.input :nome, :label => 'nome'
    =f.input :sexo, :label => 'sexo'
    =f.input :cpd, :label => 'cpd'
    =f.input :telefone, :label => 'telefone'
    =f.input :datanascimento, :label => 'datanascimento'
    =f.input :email, :label => 'email'
    = f.submit 'Salvar'
